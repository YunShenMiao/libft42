NAME = libft.a
CFLAGS = -Wall -Werror -Wextra
SOURCES = ft_atoi.c ft_bzero.c ft_isalnum.c ft_isalpha.c \
			ft_isascii.c ft_isdigit.c ft_isprint.c ft_memchr.c \
			ft_memcmp.c ft_memcpy.c ft_memmove.c ft_memset.c \
			ft_strchr.c ft_strlcat.c ft_strlcpy.c ft_strlen.c \
			ft_strncmp.c ft_strnstr.c ft_tolower.c ft_toupper.c \
			ft_strnstr.c ft_calloc.c ft_strdup.c ft_substr.c \
			ft_strjoin.c ft_strtrim.c ft_putchar_fd.c ft_putstr_fd.c \
			ft_putnbr_fd.c

OBJECTS = $(SOURCES:.c=.o)

# BONUSSOURCE = $(SOURCES)
# BONUSSOURCE += .....
# BONOBJECTS = (BONUSSOURCES:.c=,o)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@ 

all: $(NAME)

$(NAME): $(OBJECTS) libft.h
	ar rcs $(NAME) $(OBJECTS)

# bonus: $(basdad)
# 	ar rcs $(NAME) $(bsada)

clean:
	rm -f $(OBJECTS) $(BONOBJECTS)
	
fclean:
	rm -f $(NAME)
	rm -f $(NAME) $(OBJECTS) $(BONOBJECTS)

re: fclean all

.PHONY: clean fclean